{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"db:generate": { "cache": false },
		"db:push": { "cache": false },
		"build": {
			"dependsOn": ["^build", "^db:generate"],
			"inputs": ["$TURBO_DEFAULT$", ".env"],
			"outputs": ["dist/**"],
			"env": ["DATABASE_URL", "DATASET_URL", "JWT_SECRET", "JWT_EXPIRES_IN"]
		},
		"dev": {
			"dependsOn": ["^dev"],
			"cache": false,
			"persistent": true,
			"inputs": ["$TURBO_DEFAULT$", ".env"]
		},
		"lint": { "dependsOn": ["^lint"] },
		"format": { "dependsOn": ["^format"] }
	}
}
